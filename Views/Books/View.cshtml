
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Dashboard/Index.cshtml";
}

<h2>View</h2>

@model LibraryManagement.Models.Book


<div class="row">
    @using (Html.BeginForm("updateBookInfo", "Books", FormMethod.Post, new { @class = "row form-signin" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor( model => model.Id )
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Title</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Author</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Publisher</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.Publisher, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Publisher, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Year of Publishion</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.YearOfPublication, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.YearOfPublication, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">No of Pages</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.NoOfPages, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NoOfPages, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Available</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.Available, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.Available, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 mb-5">
            <button class="btn btn-primary px-4" type="submit">Update
            
            </button>
            <button class="btn btn-secondary px-4" type="button"><a class=" text-white" href="/Dashboard/Books">Back</a></button>
        </div>
    }
</div>

