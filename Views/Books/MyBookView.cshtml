
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Dashboard/Index.cshtml";
}

<h2>View</h2>

@model LibraryManagement.Models.Transaction


<div class="row">
    @using (Html.BeginForm("returnMyBook", "Books", FormMethod.Post, new { @class = "row form-signin" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.TransactionId)
        @Html.HiddenFor(model => model.BookId)
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Title</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.Book.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Book.Title, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Author</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.Book.Author, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Book.Author, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Publisher</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.Book.Publisher, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Book.Publisher, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Year of Publishion</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.Book.YearOfPublication, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Book.YearOfPublication, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">No of Pages</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.Book.NoOfPages, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Book.NoOfPages, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Transaction Status</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Issued On</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.IssuedOn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IssuedOn, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="col-12 control-label text-monospace font-weight-bold">Return Date</label>
                <div class="col-12">

                    @Html.EditorFor(model => model.ReturnDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ReturnDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-12 mb-5">
            @if (Model.Status == "issued")
            {
                <button class="btn btn-primary px-4" type="submit">
                    Return

                </button>
            }

            <button class="btn btn-secondary px-4" type="button"><a class=" text-white" href="/Dashboard/MyBooks">Back</a></button>
        </div>
    }
</div>







